{
  "manifest_version": 2,

  "name": "Price Gatherer",
  "description": "Display TCGplayer prices for Magic the Gathering (MTG) cards on the Wizards Gatherer page.",
  "version": "1.0",

  "permissions": ["tabs"],

  "page_action": {
    "default_icon": "default_icon.png",
    "default_title": "Price Gatherer",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [ 
    {
      "matches": ["http://gatherer.wizards.com/Pages/Card/*"],
      "css": ["style.css"],
      "js": ["jquery.js", "content.js"]
    }
  ]
}
